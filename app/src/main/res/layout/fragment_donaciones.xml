<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".donaciones">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:fontFamily="@font/caviardreamsbold"
                android:gravity="center"
                android:textColor="#ffff"
                android:text="Lugares Operativos"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:fontFamily="@font/caviardreamsbold"
                    android:textSize="20dp"
                    android:text="Municipalidad Distrital de JOSE LUIS BUSTAMANTE Y RIVERO"/>
                <ImageView
                    android:layout_marginTop="160dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/bustamante"/>
                <TextView
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="El primer distrito en ser mapeado, cuenta con 157 contenedores en total, contamos con el apoyo del Alcalde, Dr. Paul Rondon."
                    android:layout_marginTop="380dp"
                    android:textColor="#ffff"
                    android:fontFamily="@font/caviardreamsbold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="350dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:fontFamily="@font/caviardreamsbold"
                    android:textSize="20dp"
                    android:text="Municipalidad Provincial de PUNO"/>
                <ImageView
                    android:layout_marginTop="160dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/puno"/>
                <TextView
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Este distrito se encuentra en desarrollo, estamos mapeando la ciudad, en pocos dias podras disfrutar la aplicacion en este distrito."
                    android:layout_marginTop="380dp"
                    android:textColor="#ffff"
                    android:fontFamily="@font/caviardreamsbold"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content" />


            </RelativeLayout>




        </RelativeLayout>
    </ScrollView>

</FrameLayout>