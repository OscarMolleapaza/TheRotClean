<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Comentarios">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Esperamos que hayas disfrutado la aplicacion."
            android:textSize="20sp"
            android:textColor="#000"
            android:fontFamily="@font/caviardreamsitalic"
             />


        <RatingBar

            android:id="@+id/ratingBar"
            android:stepSize="1"
            android:rating="5"
            android:numStars="5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRatingScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/caviardreamsbold"
            android:text="Increible, me encanta."
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtComentarioss"
            android:layout_marginHorizontal="5dp"
            android:gravity="top"
            android:lines="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caviardreamsitalic"
            android:hint="Cuentanos tus experiencias y sugerencias."
            android:inputType="textMultiLine" />

        <Button

            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_white"
            android:text="Enviar Comentario"
            android:textColor="@android:color/black" />
    </LinearLayout>

</FrameLayout>