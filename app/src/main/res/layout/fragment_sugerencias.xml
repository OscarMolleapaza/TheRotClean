<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sugerencias">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:background="@drawable/grad_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/ic_menu_gallery"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/btn_bg"
                />
            <Button
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:fontFamily="@font/caviardreamsbold"
                android:textColor="#ffff"
                android:text="Tomar Foto"
                android:background="@drawable/btn_bg"
                android:layout_marginHorizontal="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:textColor="#ffff"
                android:text="referencias..."
                android:fontFamily="@font/caviardreams"
                android:textSize="30dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fr.ganfra.materialspinner.MaterialSpinner

                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#A9A9A9"
                app:ms_floatingLabelText="Selecciona el distrito"
                app:ms_hintColor="#000000"
                app:ms_hint="Please Choose"
                app:ms_multiline="true"

                />

            <Button

                android:background="@drawable/btn_bg"
                android:layout_marginTop="20dp"
                android:text="Enviar"
                android:fontFamily="@font/caviardreamsbold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>